    NSData *data = [NSData dataWithBase64EncodedString:string];
    
    //2.æŠŠäºŒè¿›åˆ¶æ•°æ®è½¬æ¢ä¸ºå­—ç¬¦ä¸²è¿”å›
    return [[NSString alloc]initWithData:data encoding:NSUTF8StringEncoding];
}

