#pragma mark 发送评论
- (void) sendCommentWithText : (NSString *) text
{
    NSString *url = [NSString stringWithFormat:@"%@%@",NetHeader,CommentAdd];
    
    NSDictionary *dic=@{
                        @"token": [UserInfoTool getUserInfo].token,
                        @"businessid" : self.courseid,
                        @"businesscode" : courseType,
                        @"toid" : @"0",
                        @"content" : text
                        };
    
    [[AFNetWW sharedAFNetWorking] AFWithPostORGet:@"post" withURLStr:url WithParameters:dic success:^(id responseDic) {
        int rescode = [responseDic[@"rescode"] intValue];
        if (rescode == 10000) {
            [MBProgressHUD showSuccess:@"评论成功"];
            CommentModel *model = [CommentModel objectWithKeyValues:responseDic[@"data"]];
            [self.comments insertObject:model atIndex:0];

            //刷新评论列表
            [self updateCommentList];
            [self setUpFooterView];
            
        }
    } fail:^(NSError *error) {
        
    }];
}

#pragma mark 刷新评论列表
- (void) updateCommentList
{
    [self.commentTableView reloadData];
    int status = [self.model.testExist[@"data"][@"status"] intValue];
    
    if (status != -3 && status != -2) {
        self.footerView.height = self.commentTableView.contentSize.height + 45 + mainSpacing + 272;
    }else
    {
        self.footerView.height = self.commentTableView.contentSize.height + 45 + mainSpacing;
    }
    self.tableView.tableFooterView = self.footerView;
}


